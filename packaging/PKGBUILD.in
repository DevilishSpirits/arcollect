pkgname=arcollect
pkgver=@ARCOLLECT_VERSION@
pkgrel=1
pkgdesc='@ARCOLLECT_SUMMARY@'
arch=('x86_64')
url="@ARCOLLECT_WEBSITE@"
license=('GPL')
depends=(@PKGBUILD_DEPENDS@)
makedepends=(meson)
source=(@PKGBUILD_SOURCE@)
md5sums=(@PKGBUILD_MD5SUMS@)

build() {
	@PKGBUILD_MESON_COMMAND@
	meson compile -C '@PKGBUILD_BUILDDIR@'
}

check() {
	meson test -C '@PKGBUILD_BUILDDIR@'
}

package() {
	DESTDIR="$pkgdir" meson install -C '@PKGBUILD_BUILDDIR@'
}
