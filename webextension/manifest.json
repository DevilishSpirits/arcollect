{
	"manifest_version": 2,
	"name": "Arcollect",
	"author": "DevilishSpirits",
	"homepage_url": "@ARCOLLECT_WEBSITE@",
	"version": "@ARCOLLECT_VERSION@",
	"background": {
		"scripts": ["background.js","twitter.js"]
	},
	"content_scripts": [{
		"matches": ["https://www.artstation.com/*"],
		"js": ["content-scripts/common.js","content-scripts/artstation.com.js"]
	},{
		"matches": ["https://www.furaffinity.net/view/*"],
		"js": ["content-scripts/common.js","content-scripts/furaffinity.net.js"]
	},{
		"matches": ["https://e621.net/posts/*","https://e926.net/posts/*"],
		"js": ["content-scripts/common.js","content-scripts/e621.net.js"]
	},{
		"matches": ["https://www.deviantart.com/*/art/*"],
		"js": ["content-scripts/common.js","content-scripts/deviantart.com.js"]
	},{
		"matches": ["https://twitter.com/*"],
		"js": ["content-scripts/common.js","content-scripts/twitter.com.js"]
	}],
	"permissions": [
		"https://twitter.com/*",
		"webRequest",
		"webRequestBlocking",
		"nativeMessaging"
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "@ARCOLLECT_MOZILLA_WEBEXT_ID@",
			"strict_min_version": "57.0a1"
		}
	}
}
